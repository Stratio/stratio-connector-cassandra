<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <parent>
        <artifactId>stratio-connector-cassandra</artifactId>
        <groupId>com.stratio.connector</groupId>
        <version>0.1.0-SNAPSHOT</version>
    </parent>
    <modelVersion>4.0.0</modelVersion>
    <packaging>jar</packaging>
    <artifactId>connector-dist</artifactId>
    <name>Stratio Cassandra Connector distribution</name>
    <description>Distribution</description>
    <url>https://github.com/Stratio/stratio-connector-cassandra/</url>

    <licenses>
        <license>
            <name>Apache License, Version 2.0</name>
            <url>http://www.apache.org/licenses/LICENSE-2.0t</url>
        </license>
    </licenses>

    <build>
        <plugins>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>appassembler-maven-plugin</artifactId>
                <version>1.8</version>
                <configuration>
                    <configurationDirectory>conf</configurationDirectory>
                    <copyConfigurationDirectory>true</copyConfigurationDirectory>
                    <includeConfigurationDirectoryInClasspath>true
                    </includeConfigurationDirectoryInClasspath>
                    <assembleDirectory>
                        ${project.build.directory}/meta-dist-${project.parent.version}
                    </assembleDirectory>
                    <extraJvmArguments>-Xms512m</extraJvmArguments>
                    <repositoryLayout>flat</repositoryLayout>
                    <generateRepository>true</generateRepository>
                    <licenseHeaderFile>${project.basedir}/src/main/template/license-header.txt
                    </licenseHeaderFile>
                    <repositoryName>lib</repositoryName>
                    <platforms>
                        <platform>unix</platform>
                    </platforms>

                </configuration>
                <executions>
                    <execution>
                        <id>Assembler-Script</id>
                        <phase>package</phase>
                        <configuration>
                            <unixScriptTemplate>
                                ${project.basedir}/src/main/template/unix-script.sh
                            </unixScriptTemplate>
                            <programs>
                                <program>
                                    <mainClass>com.stratio.meta.server.MetaApplication</mainClass>
                                    <id>meta-server</id>
                                    <platforms>
                                        <platform>unix</platform>
                                    </platforms>
                                    <jvmSettings>
                                        <systemProperties>
                                            <systemProperty>
                                                log4j.configuration=server-log.properties
                                            </systemProperty>
                                        </systemProperties>
                                    </jvmSettings>
                                </program>
                                <program>
                                    <mainClass>com.stratio.meta.sh.Metash</mainClass>
                                    <id>meta-sh</id>
                                    <platforms>
                                        <platform>unix</platform>
                                    </platforms>
                                    <jvmSettings>
                                        <systemProperties>
                                            <systemProperty>
                                                log4j.configuration=driver-log.properties
                                            </systemProperty>
                                        </systemProperties>
                                    </jvmSettings>
                                </program>
                            </programs>

                        </configuration>
                        <goals>
                            <goal>assemble</goal>
                        </goals>
                    </execution>
                    <execution>
                        <id>Assembler-Daemon</id>
                        <phase>package</phase>
                        <configuration>
                            <unixScriptTemplate>
                                ${project.basedir}/src/main/template/unix-daemon.sh
                            </unixScriptTemplate>
                            <programs>
                                <program>
                                    <mainClass>com.stratio.meta.server.MetaServer</mainClass>
                                    <id>meta-server-daemon</id>
                                    <platforms>
                                        <platform>unix</platform>
                                    </platforms>
                                    <jvmSettings>
                                        <systemProperties>
                                            <systemProperty>
                                                log4j.configuration=server-log.properties
                                            </systemProperty>
                                        </systemProperties>
                                    </jvmSettings>
                                </program>
                            </programs>
                        </configuration>
                        <goals>
                            <goal>assemble</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <artifactId>maven-resources-plugin</artifactId>
                <version>2.6</version>
                <executions>
                    <execution>
                        <id>copy-resources</id>
                        <phase>package</phase>
                        <goals>
                            <goal>copy-resources</goal>
                        </goals>
                        <configuration>
                            <outputDirectory>
                                ${project.build.directory}/meta-dist-${project.parent.version}
                            </outputDirectory>
                            <resources>
                                <resource>
                                    <directory>${project.basedir}/src/main/include</directory>
                                    <filtering>true</filtering>
                                </resource>
                            </resources>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
</project>
